<style>
  .quote {
    background-color: purple;
    border-radius: 10px; /* Adjust the value to control the curvature */
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3); /* Add a shadow effect */
    padding: 1.5rem;
    color: white;
  }
  /* Default styles */
  .form-row {
    display: flex;
    flex-wrap: wrap;
  }

  .form-group {
    margin-right: 20px;
    margin-bottom: 15px;
  }

  .form-group:last-child {
    margin-right: 0;
  }

  label {
    display: block;
    margin-bottom: 5px;
  }

  input,
  select {
    width: 200px; /* Adjust width as needed */
    padding: 5px;
    box-sizing: border-box;
  }

  .btn_quote {
    border-radius: 0 1rem 0 1rem; /* Top-left and bottom-right corners only */
    color: black;
    background-color: yellow;
    display: block;
    margin: 0 auto; /* Center the button horizontally */
    transition: transform 0.3s ease; /* Add transition effect */
  }

  .btn_quote:hover,
  .btn_quote:focus {
    transform: scale(1.1); /* Scale up the button on hover or focus */
  }

  /* input */

  input::placeholder {
    color: white; /* Make the placeholder text transparent */
  }

  input:focus::placeholder {
    color: initial; /* Restore the placeholder color when input is focused */
  }

  input {
    border: none; /* Remove default input border */
    border-bottom: 1px solid white; /* Add a white bottom border */
    background-color: transparent; /* Make the input background transparent */
    color: white; /* Set text color to white */
    padding: 5px;
    box-sizing: border-box;
    outline: none; /* Remove focus outline */
  }

  input:focus {
    border-bottom-color: yellow; /* Change border color on focus */
  }

  select option:first-child {
    color: black; /* Make the placeholder text transparent */
  }

  select:focus option:first-child {
    color: initial; /* Restore the placeholder color when select is focused */
  }

  select {
    border: none; /* Remove default select border */
    border-bottom: 1px solid #ffffff; /* Add a white bottom border */
    background-color: transparent; /* Make the select background transparent */
    color: white; /* Set text color to white */
    padding: 5px;
    box-sizing: border-box;
    outline: none; /* Remove focus outline */
  }

  select:focus {
    border-bottom-color: white; /* Change border color on focus */
  }

  .opt {
    background-color: purple;
    color: white;
  }

  /* input */

  /* Responsive styles */
  @media (max-width: 768px) {
    .form-group {
      flex: 0 0 100%; /* Each item takes full width on small screens */
      margin-right: 0;
    }

    input,
    select {
      width: 100%; /* Full width input fields on small screens */
    }

    button {
      width: 100%; /* Full width button on small screens */
    }
  }
</style>
<!-- HTML code -->
<div id="quote" class="container mt-5">
  <div class="quote">
    <form id="quoteForm" action="/book-service" method="post">
      <h1>Get a Quote</h1>
      <div class="form-row">
        <div class="form-group">
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Name"
            required
          />
        </div>
        <div class="form-group">
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Email"
            required
          />
        </div>
        <div class="form-group">
          <input
            type="tel"
            id="phone"
            name="phone"
            placeholder="Phone"
            required
          />
        </div>
        <div class="form-group">
          <select id="serviceType" name="serviceType" required>
            <option value="" disabled selected>Select Service</option>
            <option class="opt" value="plumbing">Plumbing</option>
            <option class="opt" value="electrical">Electrical</option>
            <option class="opt" value="carpentry">Carpentry</option>
            <!-- Add more options as needed -->
          </select>
        </div>
        <div class="form-group">
          <button class="btn btn_quote" type="submit">Get Quote</button>
        </div>
      </div>
    </form>
  </div>
</div>

<div id="quoteDisplay" class="container mt-5"></div>

<!-- JavaScript code -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const quoteForm = document.getElementById("quoteForm");
    const displaySection = document.getElementById("quoteDisplay");

    quoteForm.addEventListener("submit", function (event) {
      event.preventDefault(); // Prevent the form from submitting

      // Get form values
      const name = document.getElementById("name").value;
      const email = document.getElementById("email").value;
      const phone = document.getElementById("phone").value;
      const serviceType = document.getElementById("serviceType").value;

      // Display form values in display section
      displaySection.innerHTML = `
        <h1>Get a Quote Details</h1>
        <p><strong>Name:</strong> ${name}</p>
        <p><strong>Email:</strong> ${email}</p>
        <p><strong>Phone Number:</strong> ${phone}</p>
        <p><strong>Service Type:</strong> ${serviceType}</p>
      `;

      // Show alert
      // Show alert
      const alertDiv = document.createElement("div");
      alertDiv.className = "alert alert-success alert-dismissible fade show col-6 offset-3";
      alertDiv.setAttribute("role", "alert");
      alertDiv.innerHTML = `
        You have successfully submitted the quote. We will further notify you.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      `;
      displaySection.appendChild(alertDiv);

    });
  });
</script>
